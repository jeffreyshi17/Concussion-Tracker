<!DOCTYPE HTML>
<HTML>
	<HEAD>
		<TITLE>Symptom Tracker</TITLE>
			  <link href="/CH/css/style.css" rel="stylesheet" type="text/css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" >
      <script src ="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	  <script src = "MT/js/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
	  <link rel="stylesheet" href="MT/js/jquery-ui-1.12.1.custom/jquery-ui.min.css">
	  <link rel="stylesheet" href="MT/js/jquery-ui-1.12.1.custom/jquery-ui.structure.min.css">
	  <link rel="stylesheet" href="MT/js/jquery-ui-1.12.1.custom/jquery-ui.theme.min.css">
	</HEAD>
	<BODY>
	<% include partials/head %>
		<DIV id = 'header'><H1>Symptoms</H1> <H2 id="rtp">Click save to see the return to play stage</H2> </DIV>
		<DIV id = 'body'>
		<button id="save">Save to Local Storage</button>
		<button id="check">Restore from Local Storage</button>
		<button id="clear">Clear Local Storage</button>
		<button id="summary">Display Results</button>
		<form id="container">
		<table> 
		  	<td>Symptoms:</td>
		  	<th><td>Severity:</td></th>
			<% for(i=0; i<data.questions.length; i++){ %>
			    <tr>
				<tr id = <%=data.questions[i].id%>>
		    	<td><%=data.questions[i].question%></td>
					<%for(j=0; j<data.questions[i].answers.length; j+=3){%>
					<th><td>
						<div class = "answer">
						<%if(data.questions[i].answers[j].type=="slider"){%>
							<input type="range" id="<%=data.questions[i].answers[j].id%>" min="<%=data.questions[i].answers[j].min%>" max="<%=data.questions[i].answers[j].max%>" step="<%=data.questions[i].answers[j].step%>" value="0">
						<% } else{ %>
							<%=data.questions[i].answers[j].text%>
							<input type= "<%=data.questions[i].answers[j].type%>" id="<%=data.questions[i].answers[j].id%>">
						<% } %>
						</div>
					</td></th>
					<% }; %>
				</div>
				</tr> 
		    <% }; %>
	    </table>
		</form>
		</DIV>
		<DIV id = 'footer'></DIV>
		<script src="/SY/js/symptoms.js"></script>
	</BODY>
</HTML>
