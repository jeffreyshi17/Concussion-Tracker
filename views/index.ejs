<body>
      <% include partials/nav %>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class = "container">
    <div class="jumbotron text-center">
      <div class="container">
      	<!-- <div class="col-md-4 text-center"> -->
	        <h1 id="jumbo"> Welcome to Concussion Tracker!</h1>
	        	<p id="desc"> It looks like it's your first time visiting! To start, please fill out the first time questionnaire below. </p>
	        <button id="initbutton" class="btn btn-primary" onclick="window.location.href='/question'">First Time Questionnaire</button>
	        <button id="daily" class="btn btn-primary" onclick="window.location.href='/dailytracker'">Daily Tracker</button>
